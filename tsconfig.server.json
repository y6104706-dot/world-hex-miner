    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "server-dist",
    "rootDir": "server",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["server/**/*"]
}
